#!/bin/sh -eux

git worktree add -B gh-pages public origin/gh-pages

npm run build

cd public

if [ "$(git status --short)" = "" ]; then
  echo "nothing to commit, working tree clean"
  cd -
  rm -rf public
  git worktree prune
  exit 0
fi

git add .
git commit -m "Release"
git push origin gh-pages
cd -

rm -rf public
git worktree prune
